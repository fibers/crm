<h2><%= title %></h2>
<hr/>

<div class="row">

    <div class="col-md-12">
        <form class="form-horizontal" role="form" method="post">

            <div class="form-group">
                <label for="oldPassword" class="col-md-5 control-label">Old Password</label>

                <div class="col-md-3">
                    <input type="password" class="form-control" id="oldPassword" name='oldPassword' autofocus required autocomplete="off">
                </div>
            </div>

            <div class="form-group">
                <label for="newPassword1" class="col-md-5 control-label">New Password</label>

                <div class="col-md-3">
                    <input type="password" class="form-control" id="newPassword1" name="newPassword1" required autocomplete="off">
                </div>
            </div>

            <div class="form-group">
                <label for="newPassword2" class="col-md-5 control-label">Repeat New Password</label>

                <div class="col-md-3">
                    <input type="password" class="form-control" id="newPassword2" name="newPassword2" required autocomplete="off">
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-push-5 col-md-1" style="margin-left:3%">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>

                <div class="col-md-push-6 col-md-1" style="margin-left:-6%">
                    <a href="/admins/0" type="button" class="btn btn-primary btn-block">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>