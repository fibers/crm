<h2><%= title %></h2>
<hr/>

<div class="row">

    <div class="col-md-12">
        <form class="form-horizontal" role="form" method="post">

            <div class="form-group">
                <label for="username" class="col-md-5 control-label">User Name</label>

                <div class="col-md-3">
                    <input type="text" class="form-control" id="username" name='username' autofocus required autocomplete="off">
                </div>
            </div>

            <div class="form-group">
                <label for="password" class="col-md-5 control-label">Password</label>

                <div class="col-md-3">
                    <input type="password" class="form-control" id="password" name="password" required autocomplete="off">
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-push-5 col-md-1" style="margin-left:3%">
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>

                <div class="col-md-push-6 col-md-1" style="margin-left:-6%">
                    <a href="/admins/0" type="button" class="btn btn-primary btn-block">Cancel</a>
                </div>
            </div>
        </form>
    </div>

</div>